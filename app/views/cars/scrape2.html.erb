<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sub Title</th>
      <th>Stock Type</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.title %></td>
        <td><%= car.sub_title %></td>
        <td><%= car.stock_type %></td>

        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

